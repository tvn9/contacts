* {

    margin: 0;
    padding: 0;
    /* box-sizing: border-box;     */
}

html {
    font-size: 62.5%;
}

body {
    display: flex;
    justify-content: center;
    font-family:Arial, Helvetica, sans-serif;
    font-size: 1.3rem;
    color: #2c2c2c;
    letter-spacing: .03rem;
    line-height: 1.8rem;
}

.container {
    width: 80%;
    display: flex;
}

h1 {
    font-size: 2.5rem;
    text-transform: uppercase;
}

.navbar {
    display: flex;
    width: 100%;
    height: 5rem;
    background-color: #ffffff;
    justify-content: space-between;
}

.navbar-logo {
    display: flex;
    align-items: center;
}
.navbar-logo-text {
    font-size: 3rem;
    color: #800080
}

.navbar-logo-text a {
    text-decoration: none;
    text-transform: none;
}

.navbar-menu {
    display: flex;
    align-items: center;
}

.navbar-menu-links {
    display: inline;
    margin-left: 2rem;
    color: #800080;
}

.navbar-menu-links a {
    text-decoration: none;
    text-transform: none;
}

